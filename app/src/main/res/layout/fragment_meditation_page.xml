<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditationPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="IT'S TIME TO RELAX"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_height="113dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FBB9C5">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/med1"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="LIVING IN THE MOMENT"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white"
                    android:layout_marginRight="150dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_height="113dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#B8DFE6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/med2"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BREATHE FREELY"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/pause2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#C3EDBF">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/med3"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="THE RELAX ZONE"
                android:layout_marginLeft="20dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/pause3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FDD0B1">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/med4"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="FOCUS AT WORK"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/pause4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#CFBBDE">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/med5"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="DEEPEN YOUR PRACTICE"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/pause5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#eae864">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/med6"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="CALM MOMENTS"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/play"
                    android:drawableTint="@color/white" />

                <Button
                    android:id="@+id/pause6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="150dp"
                    android:background="@drawable/pause_image"
                    android:drawableTint="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>